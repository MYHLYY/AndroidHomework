                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="left|center"
                    android:text="重庆邮电大学"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="40dp"
                    android:layout_weight="1"
                    android:gravity="right|center"
                    android:text="更改地区>>"
                    android:textSize="15dp"
                    android:textColor="@color/black"
                    />


